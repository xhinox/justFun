        <icon src="res/icon/ios/Icon-Small-60@3x.png" width="180" height="180" />
        <icon src="res/icon/ios/Icon-Small-72.png" width="72" height="72" />
        <icon src="res/icon/ios/Icon-Small-72@2x.png" width="144" height="144" />
        <icon src="res/icon/ios/Icon-Small-76.png" width="76" height="76" />
        <icon src="res/icon/ios/Icon-Small-76@2x.png" width="152" height="152" />
        <icon src="res/icon/ios/iTunesArtwork.png" width="512" height="512" />
        <icon src="res/icon/ios/iTunesArtwork@2x.png" width="1024" height="1024" />

        <splash src="res/screen/ios/Default.png" width="320" height="480" />
        <splash src="res/screen/ios/Default@2x.png" width="640" height="960" />
        <splash src="res/screen/ios/Default-568h.png" width="320" height="568" />
        <splash src="res/screen/ios/Default-568h@2x.png" width="640" height="1136" />
