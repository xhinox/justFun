<?xml version='1.0' encoding='utf-8'?>
<widget xmlns="http://www.w3.org/ns/widgets"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gap="http://phonegap.com/ns/1.0"
    id="org.tecnico.mrg"
    version="1.0.8"
    >
    <!-- Android -->
    <!-- version="1.0.7" -->
    <!-- id="org.tecnico.mrg" -->

    <!-- iOS -->
    <!-- version="1.0.25" -->
