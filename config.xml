<?xml version='1.0' encoding='utf-8'?>
<widget id="org.tecnico.mrg" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>tecnicoMirage</name>
    <description>
        Aplicacion para mantener una comunicacion con nuestros tecnicos.
    </description>
    <author email="support@phonegap.com" href="http://mirage.mx">
        Mirage Dev Team
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="android-build-tool" value="gradle" />
    <preference name="android-minSdkVersion" value="19" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <plugin name="cordova-plugin-device" spec="~1.1.7" />
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.4" />
    <plugin name="cordova-plugin-splashscreen" source="npm" />
    <gap:plugin name="pushwoosh-pgb-plugin" source="npm" />
    <platform name="android">
        <icon density="ldpi" src="res/icon/android/action_bar_ldpi.png" />
        <icon density="mdpi" src="res/icon/android/action_bar_mdpi.png" />
        <icon density="hdpi" src="res/icon/android/action_bar_hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/action_bar_xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/action_bar_xxhdpi.png" />
        <icon density="ldpi" src="res/icon/android/launcher_icon_ldpi.png" />
        <icon density="mdpi" src="res/icon/android/launcher_icon_mdpi.png" />
        <icon density="hdpi" src="res/icon/android/launcher_icon_hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/launcher_icon_xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/launcher_icon_xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/launcher_icon_xxxhdpi.png" />
        <icon density="ldpi" src="res/icon/android/notification_ldpi.png" />
        <icon density="mdpi" src="res/icon/android/notification_mdpi.png" />
        <icon density="hdpi" src="res/icon/android/notification_hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/notification_xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/notification_xxhdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/ldpi-port.png" />
        <splash density="port-mdpi" src="res/screen/android/mdpi-port.png" />
        <splash density="port-hdpi" src="res/screen/android/hdpi-port.png" />
        <splash density="port-xhdpi" src="res/screen/android/xhdpi-port.png" />
        <splash density="port-xxhdpi" src="res/screen/android/xxhdpi-port.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/xxxhdpi-port.png" />
    </platform>
    <platform name="ios">
        <icon height="57" platform="ios" src="res/icon/ios/Icon.png" width="57" />
        <icon height="114" platform="ios" src="res/icon/ios/Icon@2x.png" width="114" />
        <icon height="20" platform="ios" src="res/icon/ios/Icon-Notification@2x.png" width="20" />
        <icon height="40" platform="ios" src="res/icon/ios/Icon-Notification@2x.png" width="40" />
        <icon height="60" platform="ios" src="res/icon/ios/Icon-Notification@3x.png" width="60" />
        <icon height="29" platform="ios" src="res/icon/ios/icon-small.png" width="29" />
        <icon height="58" platform="ios" src="res/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" platform="ios" src="res/icon/ios/icon-small@3x.png" width="87" />
        <icon height="40" platform="ios" src="res/icon/ios/Icon-Samll-40.png" width="40" />
        <icon height="80" platform="ios" src="res/icon/ios/Icon-Samll-40@2x.png" width="80" />
        <icon height="120" platform="ios" src="res/icon/ios/Icon-Samll-40@3x.png" width="120" />
        <icon height="50" platform="ios" src="res/icon/ios/Icon-Small-50.png" width="50" />
        <icon height="100" platform="ios" src="res/icon/ios/Icon-Small-50@2x.png" width="100" />
        <icon height="60" platform="ios" src="res/icon/ios/Icon-Small-60.png" width="60" />
        <icon height="120" platform="ios" src="res/icon/ios/Icon-Small-60@2x.png" width="120" />
        <icon height="180" platform="ios" src="res/icon/ios/Icon-Small-60@3x.png" width="180" />
        <icon height="72" platform="ios" src="res/icon/ios/Icon-Small-72.png" width="72" />
        <icon height="144" platform="ios" src="res/icon/ios/Icon-Small-72@2x.png" width="144" />
        <icon height="76" platform="ios" src="res/icon/ios/Icon-Small-76.png" width="76" />
        <icon height="152" platform="ios" src="res/icon/ios/Icon-Small-76@2x.png" width="152" />
        <splash height="480" platform="ios" src="res/screen/ios/Default.png" width="320" />
        <splash height="960" platform="ios" src="res/screen/ios/Default@2x.png" width="640" />
        <splash height="1136" platform="ios" src="res/screen/ios/Default-568h@2x.png" width="640" />
        <splash height="1334" platform="ios" src="res/screen/ios/Default-667h@2x.png" width="750" />
        <splash height="2208" platform="ios" src="res/screen/ios/Default-736h@3x.png" width="1242" />
    </platform>
    <access origin="*" />
    <access origin="*.pushwoosh.com" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="FadeSplashScreen" value="false"/>
        <preference name="FadeSplashScreenDuration" value="750"/>
        <preference name="ShowSplashScreenSpinner" value="false"/>
    </platform>

</widget>
