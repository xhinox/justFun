    <name>TÃ©cnico Mirage</name>
    <description>
        Aplicacion para mantener una comunicacion con nuestros tecnicos.
    </description>
    <author email="androiddev@airesmirage.com" href="http://mirage.mx">
        Mirage Dev Team
    </author>
    <content src="index.html" />

    <preference name="phonegap-version" value="cli-8.0.0" />
    <!-- <preference name="phonegap-version" value="cli-7.1.0" /> -->
    <preference name="android-build-tool" value="gradle" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <preference name="FadeSplashScreenDuration" value="100" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="FadeSplashScreen" value="false" />
    <preference name="fullscreen" value="false" />

    <plugin name="cordova-plugin-device" spec="~1.1.7" />
    <plugin name="cordova-plugin-network-information" spec="~1.3.4" />
    <plugin name="cordova-plugin-splashscreen" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="^2.0.2" />
    <plugin name="cordova-plugin-keyboard" source="npm" spec="~1.2.0" />
    <gap:plugin name="pushwoosh-pgb-plugin" source="npm" />

    <allow-navigation href="http://*" />
    <allow-navigation href="https://*" />
    <allow-navigation href="http://*/*" />
    <allow-navigation href="https://*/*" />
    <allow-navigation href="data:*" />
    <allow-navigation href="about:*" />
    <allow-navigation href="tel:*" />
    <allow-navigation href="gap:*" />
    <allow-intent href="http://*" />
    <allow-intent href="https://*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="geo:*" />
    <allow-intent href="cdvfile://*" />
    <access origin="*" />
    <access origin="*.pushwoosh.com" />

    <platform name="android">
        <allow-intent href="market:*" />
        <preference name="load-url-timeout" value="50000" />
        <preference name="android-minSdkVersion" value="19" />
        <preference name="android-installLocation" value="internalOnly" />
        <preference name="android-windowSoftInputMode" value="adjustResize" />
        <icon density="ldpi" src="res/icon/android/action_bar_ldpi.png" />
        <icon density="mdpi" src="res/icon/android/action_bar_mdpi.png" />
        <icon density="hdpi" src="res/icon/android/action_bar_hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/action_bar_xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/action_bar_xxhdpi.png" />
        <icon density="ldpi" src="res/icon/android/launcher_icon_ldpi.png" />
        <icon density="mdpi" src="res/icon/android/launcher_icon_mdpi.png" />
        <icon density="hdpi" src="res/icon/android/launcher_icon_hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/launcher_icon_xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/launcher_icon_xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/launcher_icon_xxxhdpi.png" />
        <icon density="ldpi" src="res/icon/android/notification_ldpi.png" />
        <icon density="mdpi" src="res/icon/android/notification_mdpi.png" />
        <icon density="hdpi" src="res/icon/android/notification_hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/notification_xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/notification_xxhdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/ldpi-port.png" />
        <splash density="port-mdpi" src="res/screen/android/mdpi-port.png" />
        <splash density="port-hdpi" src="res/screen/android/hdpi-port.png" />
        <splash density="port-xhdpi" src="res/screen/android/xhdpi-port.png" />
        <splash density="port-xxhdpi" src="res/screen/android/xxhdpi-port.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/xxxhdpi-port.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="target-device" value="handset" />
        <preference name="prerendered-icon" value="false" />
        <preference name="exit-on-suspend" value="false" />
        <preference name="deployment-target" value="7.0" />
        <preference name="swift-version" value="3.0" />

        <icon src="res/icon/ios/Icon.png" width="57" height="57" />
        <icon src="res/icon/ios/Icon@2x.png" width="114" height="114" />
        <icon src="res/icon/ios/Icon-Notification.png" width="20" height="20" />
        <icon src="res/icon/ios/Icon-Notification@2x.png" width="40" height="40" />
        <icon src="res/icon/ios/Icon-Notification@3x.png" width="60" height="60" />
        <icon src="res/icon/ios/Icon-Small.png" width="29" height="29" />
        <icon src="res/icon/ios/Icon-Small@2x.png" width="58" height="58" />
        <icon src="res/icon/ios/Icon-Small@3x.png" width="87" height="87" />
        <icon src="res/icon/ios/Icon-Small-40.png" width="40" height="40" />
        <icon src="res/icon/ios/Icon-Small-40@2x.png" width="80" height="80" />
        <icon src="res/icon/ios/Icon-Small-40@3x.png" width="120" height="120" />
        <icon src="res/icon/ios/Icon-Small-50.png" width="50" height="50" />
